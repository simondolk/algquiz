{
  "$id": "https://example.org/schemas/species.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": [
    "id",
    "latinName",
    "images"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "commonName": {
      "type": "string"
    },
    "latinName": {
      "type": "string",
      "minLength": 1
    },
    "group": {
      "type": "string"
    },
    "subgroup": {
      "type": "string"
    },
    "aliases": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "images": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": true
}
